        let name = prompt("What is your name?");
        let info = prompt("What is your email address?");
        let contact = prompt(" Would you like us to contact you?");
        if (contact === "yes") {
          alert(" Thank you " + name + " we'll be in touch!");
        } else {
          alert("Thank you " + name + ", hope to see you again!");
        }
      }
      let contactButton = document.querySelector("button");
